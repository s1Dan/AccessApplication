<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notifications_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Уведомления и звуки"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notifications_switch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Отключить уведомления"
        android:checked="false"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/notifications_choose_sound"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Выбрать звук"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/notifications_spinnerSound"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginTop="15dp" />



</LinearLayout>
